%h1 Listing tasks

.table-container
  %table.datatable
    %thead
      %tr
        %th Project
        %th #
        %th Name
        %th Estimate
        %th Version
        %th Iteration
        %th Actions
    %tbody
      - @tasks.each do |task|
        %tr
          %td= link_to task.project.name, task.project
          %td= link_to task.number, task
          %td= task.name
          %td= task.estimate
          %td= task_version(task)
          %td= task_iteration(task)
          %td
            = link_to 'Edit', edit_task_path(task)
            = link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Task', new_task_path
